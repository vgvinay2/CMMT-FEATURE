<div class="row">
  <%= form_with(model: product) do |form| %>
  <div class="col-sm-6">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="col-sm-6">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>
  <div class="col-sm-6">
    <%= form.label :price, class: "form-label" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>
  <div class="col-sm-6">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.text_field :quantity, class: "form-control" %>
  </div>  
  <div class="row">    
  <div class="col-sm-6">
    <%= form.submit 'Submit',class: "btn btn-primary",style: "margin-top: 20px" %>
    <%= link_to 'Cancel', products_path, type: 'button', class: "btn btn-primary pull-right", style: "margin-top: 20px;color: white;" %>
  </div>
