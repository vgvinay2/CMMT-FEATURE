    <%#= form.submit 'Submit',class: "btn btn-primary",style: "margin-top: 20px" %>
    <%#= link_to 'Back', products_path, type: 'button', class: "btn btn-primary pull-right", style: "margin-top: 20px;" %>
  </div> -->
</div>
  <% end %>
</div>