<!DOCTYPE html>
<html>
<head>
  <title>CMMTFeature</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <% if user_signed_in? %>
            <%= link_to 'Edit profile', edit_user_registration_path, type: 'button', class: "btn btn-primary", style: "margin-top: 20px;color: white;" %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, type: 'button', class: "btn btn-primary", style: "margin-top: 20px;color: white;" %>
          <%else%>
            <%= link_to 'Sign up', new_user_registration_path, type: 'button', class: "btn btn-primary", style: "margin-top: 20px;color: white;" %>
            <%= link_to 'Login', new_user_session_path, type: 'button', class: "btn btn-primary", style: "margin-top: 20px;color: white;" %>
          <%end%>
        </div>
      </div>
      <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
  </html>
